<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.naser.thehelper.MaidLoginActivity"
    android:background="@drawable/hs">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/formLogo"
        android:src="@drawable/mod"
        android:scaleType="fitCenter"
        android:layout_marginBottom="30dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/formLogo"
        android:id="@+id/scrollView"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/round"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مرحبا"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="يرجى ادخل المعلومات التاليه"
                android:textColor="#ffff"
                android:textSize="12sp"
                android:layout_marginBottom="30dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"

                />
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="البريد الاكتروني"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableRight="@drawable/email"
                android:textSize="15sp"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:id="@+id/email"
                android:inputType="textWebEmailAddress"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="كلمة المرور"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableRight="@drawable/pass"
                android:textSize="15sp"
                android:drawablePadding="5dp"
                android:inputType="textPassword"
                android:id="@+id/password"
                android:layout_marginBottom="10dp"
                android:paddingLeft="200dp"/>


            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="#fff"
                android:text="تسجيل دخول"
                android:textStyle="normal"
                android:background="@drawable/background_bn1"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="36dp" />





        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginTop="460dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/registration"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="#fff"
            android:text="تسجيل"
            android:background="@drawable/background_bn1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="مستخدم جديد ؟"
            android:textColor="#fff"
            android:layout_gravity="right"
            android:layout_below="@+id/scrollView"
            />

    </LinearLayout>
</RelativeLayout >
