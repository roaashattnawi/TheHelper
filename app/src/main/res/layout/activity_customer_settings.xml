<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    android:background="@drawable/hs"
    tools:context="com.example.naser.thehelper.CustomerSettingsActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/formLogo"
        android:src="@drawable/mod"
        android:scaleType="fitCenter"
        android:layout_marginBottom="30dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/formLogo"
        android:id="@+id/scrollView"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/round"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="الاسم الكامل"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableRight="@drawable/ic_action_per"
                android:textSize="15sp"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:id="@+id/name"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="رقم الهاتف"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableRight="@drawable/ic_action_phone"
                android:textSize="15sp"
                android:drawablePadding="5dp"
                android:inputType="phone"
                android:id="@+id/phone"
                android:layout_marginBottom="10dp"
                android:paddingLeft="170dp"/>

            <Button
                android:id="@+id/confirm"
                android:text="تحديث"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="#fff"
                android:textStyle="normal"
                android:background="@drawable/background_bn1"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/back"
                android:text="رجوع"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="#fff"
                android:textStyle="normal"
                android:background="@drawable/background_bn1"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
