<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hs"
    tools:context="com.example.naser.thehelper.CustomerSignupActivtiy">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/formLogo"
        android:id="@+id/scrollView"
        android:layout_marginTop="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/round"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Started"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Just a few details to get you started"
                android:textColor="#fff"
                android:textSize="12sp"
                android:layout_marginBottom="30dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"

                />
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="البريد الاكتروني"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableRight="@drawable/email"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:id="@+id/email"
                android:inputType="textWebEmailAddress"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="كلمة المرور"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableRight="@drawable/pass"
                android:textSize="15sp"
                android:drawablePadding="5dp"
                android:inputType="textPassword"
                android:id="@+id/password"
                android:layout_marginBottom="10dp"
                android:paddingLeft="170dp"/>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="تأكيد كلمة المرور"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableRight="@drawable/pass"
                android:textSize="15sp"
                android:drawablePadding="5dp"
                android:inputType="textPassword"
                android:id="@+id/pass2"
                android:layout_marginBottom="10dp"
                android:paddingLeft="130dp"/>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="الاسم بالكامل"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableRight="@drawable/ic_action_per"
                android:textSize="15sp"
                android:drawablePadding="5dp"
                android:inputType="textPersonName"
                android:id="@+id/fullname"
                android:layout_marginBottom="10dp"
                android:paddingLeft="170dp"/>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint=" رقم الهاتف"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableRight="@drawable/ic_action_phone"
                android:textSize="15sp"
                android:drawablePadding="5dp"
                android:inputType="textPersonName"
                android:id="@+id/phone"
                android:layout_marginBottom="10dp"
                android:paddingLeft="170dp"/>




            <Button
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="#fff"
                android:text="تسجيل "
                android:textStyle="normal"
                android:background="@drawable/background_bn1"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="36dp" />


        </LinearLayout>

    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="كلمه المرور غير مطابقة"
        android:textColor="#BB1B1B"
        android:id="@+id/error"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_below="@+id/scrollView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        />

</LinearLayout>
